PROJECTS = SimpleAppSrvr.exe SimpleClient.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

SimpleAppSrvr.exe: Server\SimpleAppSrvr.dpr
  $(DCC)

SimpleClient.exe: Client\SimpleClient.dpr
  $(DCC)


